@using OnlineShop_4M_Models
@model IEnumerable<Product>

<h1>Продукты</h1>

<p>
    <a class="btn btn-primary" asp-controller="Product" asp-action="UpdateCreate">Создать продукт</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Название продукта</th>
                <th>Цена</th>
                <th>Управление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-controller="Product" asp-action="UpdateCreate" asp-route-Id="@item.Id" class="btn btn-primary">
                            Изменить
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                            Удалить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        Продукты отсутствуют!
    </p>
}